<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BumAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/statusbar_color</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:fontFamily">@font/nanum_square_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/nanum_square_bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundButton.Blue">
        <item name="backgroundTint">@color/blue_2_main</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RoundButton.Cancel">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/paper_3</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/disable</item>
        <item name="rippleColor">@color/disable</item>
    </style>
</resources>