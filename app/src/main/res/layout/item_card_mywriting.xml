<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mywriting"
        android:layout_gravity="center"
        android:layout_width="156dp"
        android:layout_height="156dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="15dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_mywriting_category"
            android:layout_width="51dp"
            android:layout_height="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="119dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="89dp"
            android:fontFamily="@font/nanum_square_regular"
            android:textColor="@color/blue_2_main"
            android:textSize="14dp"
            android:text="인간관계"/>

        <TextView
            android:id="@+id/tv_mywriting_title"
            android:layout_width="61dp"
            android:layout_height="18dp"
            android:layout_marginTop="49dp"
            android:layout_marginBottom="89dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="79dp"
            android:fontFamily="@font/nanum_square_extrabold"
            android:textColor="@color/header"
            android:textSize="18dp"
            android:text="글제목1" />

        <TextView
            android:id="@+id/tv_mywriting_content"
            android:layout_width="122dp"
            android:layout_height="42dp"
            android:layout_marginTop="73dp"
            android:layout_marginBottom="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="18dp"
            android:gravity="bottom"
            android:lineSpacingExtra="7dp"
            android:fontFamily="@font/nanum_square_regular"
            android:textSize="14dp"
            android:text="대충 글내용 미리보기\n어쩌고 저쩌고" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>